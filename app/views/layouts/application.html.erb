<!DOCTYPE html>
<html>
  <head>
    <title>Cookiegram</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!--[if lt IE 9]>
        <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js"></script>
    <![endif]-->
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <%= link_to '/', id: "logo", class: "navbar-brand" do %>
          <span class="cookie">üç™</span>
          cookiegram
        <% end %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Home", '/' %></li>
            <li><%= link_to "Posts", '/posts' %></li>
            <% if is_logged_in? %>
              <li><%= link_to "Log out", logout_path, class: "btn btn-sm btn-secondary", method: :delete %></li>
              <li><%= link_to "Account", @current_user, class: "btn btn-sm btn-primary"%></li>
            <% else %>
              <li><%= link_to "Log in", '/login', class: "btn btn-sm btn-secondary" %></li>
              <li><%= link_to "Sign up", '/signup', class: "btn btn-sm btn-primary"%></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>
    <div class="container">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
